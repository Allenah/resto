<div class="container">
<div class="box">
<div class="restaurant-container">
  <div class="restaurant-hero" style="background-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%,rgba(24,35,44,0) 19%,rgba(125,185,232,0) 100%), url(<%= @restaurant.photo %>)">
    <h2><%= @restaurant.name %></h2>
  </div>
  <div class="description-container">
    <div class="icons-container">
     <!--  <h5>Stats</h5> -->
     <div class="icons">
      <i class="fas fa-euro-sign"></i>
      <span><%= @restaurant.price %></span>
    </div>
    <div class="icons">
      <i class="fas fa-map-marker-alt"></i>
      <span><%= @restaurant.location %> </span>
    </div>
    <div class="icons">
      <i class="fas fa-utensils"></i>
      <span><%= @restaurant.cuisine %> </span>
    </div>
    <div class="icons">
      <i class="fas fa-user"></i>
      <span><%= @restaurant.capacity %> </span>
    </div>
  </div>
  <div class="details-container">
    <h5>About Restaurant</h5>
    <p> <%= @restaurant.description %> </p>
  </div>
</div>
</div>
<div class="booking">

  <%= simple_form_for [@restaurant, @booking] do |f| %>
  <%= f.input :start_time, :label => "Select date and start time", as: :string %>
  <%= f.input :end_time, :label => "Select end time", as: :string %>
  <%= f.button :submit, 'Book', class: "btn btn-success btn-block" %>
  <% end %>
  </div>
</div>
</div>

